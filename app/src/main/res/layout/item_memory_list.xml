<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/02/2020"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasdasadasdasdasdasdasdasda"
            android:layout_below="@id/date"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/content"
            android:src="@drawable/anzinh"/>

    </RelativeLayout>

</RelativeLayout>